 <div class="container-fluid userCon">

        <div class="container-fluid">

            <div class="row">

              {{> userProfileDetails userProfile}}
                
              <!--
                Middle Column
              -->
              <div class="col-8">
                <!--
                    Title for Recommended
                -->
                <div class="container-sm">
                    <h3 class="recommended">
                    Reviews
                    </h3>


                    <!-- DROPDOWN SORT BY -->
                    <div class="dropdown recommended">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                          Sort by: 
                        </button>
                        <ul class="dropdown-menu">
                          <li><a class="dropdown-item" href="#">Date</a></li>
                          <li><a class="dropdown-item" href="#">Alphabetical</a></li>
                          <li><a class="dropdown-item" href="#">Most Useful</a></li>
                        </ul>
                    </div>
                </div>

                <!--
                    List of Cafes
                -->

                {{#each reviews}}
                {{> userProfileReview this}}
                {{/each}}

            </div>
            <!-- ROW -->

        </div>
        <!-- container-sm -->

    </div>