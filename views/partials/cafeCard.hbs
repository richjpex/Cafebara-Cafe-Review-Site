<div class="card mb-3" data-price="{{price}}" data-rating="{{rating}}" onclick="redirectToCafe('{{cafeName}}')">
    <div class="row g-0" style="margin: 0;">
        <div class="col-md-4">
        <img src="{{cafeImg}}" class="img-fluid rounded" alt="...">
        </div>

        <div class="col-md-6">
        <div class="card-body"  style="margin: 0;">

            <a href="cafe/{{cafeName}}"><h5 class="card-title">{{cafeName}}</h5></a>
            <div class = "cb_rating">
            <img src="../../images/ratings/{{#grequal rating 1}}full{{else grequal rating 0.5}}half{{else}}empty{{/grequal}}.png"/>
        <img src="../../images/ratings/{{#grequal rating 2}}full{{else grequal rating 1.5}}half{{else}}empty{{/grequal}}.png"/>
        <img src="../../images/ratings/{{#grequal rating 3}}full{{else grequal rating 2.5}}half{{else}}empty{{/grequal}}.png"/>
        <img src="../../images/ratings/{{#grequal rating 4}}full{{else grequal rating 3.5}}half{{else}}empty{{/grequal}}.png"/>
        <img src="../../images/ratings/{{#grequal rating 5}}full{{else grequal rating 4.5}}half{{else}}empty{{/grequal}}.png"/>
            <span class = "numreviews">{{rating}} ({{numOfReviews}})</span>
        </div>
            <p class="card-text">{{cafeShortInfo}}</p>
            <p class="card-text"><small class="text-body-secondary">Avg. Price: â‚±{{price}}</small></p>
            <p class="card-text"><small class="text-body-secondary">{{open_details}}</small></p>
        </div>
        </div>

    </div>
</div>

<script>
    function redirectToCafe(cafeName) {
        window.location.href = `cafe/${cafeName}`;
    }
</script>